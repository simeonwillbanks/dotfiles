  [user]
      name = Simeon F. Willbanks
      email = sfw@simeonfosterwillbanks.com
  [color]
      branch = auto
      diff = auto
      status = auto
  [color "branch"]
      current = yellow reverse
      local = yellow
      remote = green
  [color "diff"]
      meta = yellow bold
      frag = magenta bold
      old = red bold
      new = green bold
  [color "status"]
      added = yellow
      changed = green
      untracked = cyan
  [alias]
      st = status
      ci = commit
      br = branch
      co = checkout
      df = diff
      lg = log -p
      who = shortlog -s --
      up = !git fetch origin && git rebase origin/master
      ir = !git rebase -i origin/master
      lr = !git pull --rebase
      rmb = !sh -c 'git branch -D $1 && git push origin :$1' -
      cleanup = !git remote prune origin && git gc && git clean -df && git stash clear
      next = !git add . && git rebase --continue
      ctags = ! .git/hooks/ctags
      ta  = !sh -c 'ref="$(git symbolic-ref HEAD 2> /dev/null | cut -b 12-)" && git push origin $ref:throwaway-$ref-$(date +"%s")'
      tac = !sh -c 'ref="$(git symbolic-ref HEAD 2> /dev/null | cut -b 12-)" && git fetch && git branch -r --list origin/throwaway-$ref* | cut -b 10- | xargs -I% git push -u origin :%'
  [core]
      excludesfile = ~/.gitignore_global
      editor = vim
  [init]
      templatedir = ~/.git_template
  [push]
      default = simple
